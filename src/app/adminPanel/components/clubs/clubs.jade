.container-fluid
  #wrapper
    acme-navbar
    // Page Content
    #page-content-wrapper
      .container-fluid
        // -------------- HEADER ---------------
        .row
          menu-button
          .col-md-4
            .form-group
              input.form-control(type='text', ng-model='clubsCtrl.searchBox', placeholder='Search')
          .col-md-4
            button.btn.btn-info(ng-click='clubsCtrl.addClub()')  Add Club
        h1 Clubs
        br
        // --------------  CLUB LIST  ---------------
        .team
          ul
            li.media(ng-repeat='club in clubsCtrl.paginationRange')
              .media-left.media-middle
                img.media-object.img-thumbnail(ngf-thumbnail='club.logo')
              .media-body
                h3.media-heading {{ club.name}}
                button.btn.btn-primary.pull-right(type='button', ui-sref='adminPanel.clubDetails({clubId: club.id})') View Details

        // ---------------- PAGINATION ----------------
        pagination(ng-model='clubsCtrl.currentPage', total-items='(clubsCtrl.clubs | filter:clubsCtrl.searchBox).length', max-size='clubsCtrl.maxSize', boundary-links='true', ng-change='clubsCtrl.pageChanged()')

