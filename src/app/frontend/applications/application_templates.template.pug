.main-header
    .container
        .row
            .col-md-6
                a.header-link((click)='loadProfessors(1,10)')
                    h4.header-name APPLICATIONS

            .col-md-5
                .row
                    .col-md-12.professor-search
                        professor-search((selectedSearchItem)='goToProfessor($event)')
                    .col-xs-12.filtered-dept
                        professor-departments((filteredDept)="filterDepts($event)",(outputDepts)='sideDepts($event)')

.container
        .row
            .col-xs-12
                h1.display-4 Applications

        new-application-submission([template]='selectedTemplate')

        .row
            .card-deck-wrapper
                .card-deck
                     .card(*ngFor='let application_template of listing.collection')
                         h3.card-header {{application_template.name}}

                         .card-block
                             p.card-text {{application_template.description}}

                             a.btn.btn-primary((click)='selectedTemplate = application_template')
                                | Apply
