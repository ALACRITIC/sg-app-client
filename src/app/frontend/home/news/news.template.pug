.regular-news
    .container.regular-news-layout
        .card-columns
            .card(*ngFor='let post of posts')
                img.card-img-top(src='{{post.image}}', alt='Card image cap')

                .card-block

                    p.card-text {{post.created_at | date:"fullDate" }}

                    a.card-link((click)='goToProfile(post)') Read More


loading-spinner(*ngIf="!posts")