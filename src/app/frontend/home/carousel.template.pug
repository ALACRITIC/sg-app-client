carousel([interval]='myInterval', [noWrap]='noWrapSlides')
    slide(*ngFor='let post of slides; let index=index', [active]='post.active' routerLink='/post/{{post.id}}')
        img([src]='post.image', style='margin:auto;' )

        .carousel-caption
          h4 {{post.title}}
          p {{post.created_at | date:"fullDate" }}

