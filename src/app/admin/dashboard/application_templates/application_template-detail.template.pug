.row(*ngIf='!isEdited')
    .col-xs-3
        a.btn.btn-primary(routerLink='../../applications') Back
.row
    .col-md-12.col-xs-12(*ngIf='!isEdit')
        .row
            .col-md-8
                .row
                    .col-xs-12
                        h1 {{application_template.name}}

                .row
                    .col-xs-12
                         p Description: {{application_template.description}}

            .col-md-4
                figure.figure
                    a(href='{{application_template.document}}') Document URL

        .btn-group
            button.btn.btn-danger((click)='deleteApplicationTemplate(application_template)')
                | Delete Application

            button.btn.btn-warning((click)='isEdit = true')
                | Edit Application

    .col-md-4.col-xs-12(*ngIf='isEdit')
        application-form([inputApplication]='application_template', (outputApplication) = 'updateApplicationTemplate($event)')

         a.btn.btn-primary((click)='isEdit = false') Cancel
.row
    .col-md-12
        admin-application-submissions([template_id]='application_template.id')
