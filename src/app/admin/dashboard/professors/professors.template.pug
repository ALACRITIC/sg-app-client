h1 Professors
.row
    .col-md-4
        professor-form((outputProfessor)="addProfessor($event)")
professor-departments((filteredDept)="filterDepts($event)")
.list-group
    .list-group-item(*ngFor="let professor of listing.collection")
        .media(routerLink="../professor/{{professor.id}}")
            a.media-left
                img.img-circle.media-object.media-img(src="{{professor.photo}}", alt="{{professor.name}}")
            .media-body
                h4.media-heading {{professor.name}}
                small.text-muted
                    | {{professor.department}}
                |                  {{professor.description}}

pagination([totalItems]="listing.count", [(ngModel)]="currentPage", (pagechanged)="pageChanged($event)")
