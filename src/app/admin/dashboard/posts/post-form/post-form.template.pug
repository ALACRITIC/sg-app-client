.row(*ngIf='!isEditing')
    .col-xs-3
        a.btn.btn-primary(routerLink='../posts') Back
.row
    .col-md-12
        .card-deck-wrapper
            .card-deck
                .card
                    .row
                        .col-md-12
                            .row
                                .col-md-4
                                     .form-group
                                         img.img-thumbnail(src='{{post.logo}}')

                                         input.form-control([(ngModel)]='post.title', name='title', placeholder='Title')

                                     .form-group
                                         | Article is featured?
                                         input(type='checkbox', [(ngModel)]='post.featured')

                                     .form-group
                                         | Article styles
                                         input.form-control([(ngModel)]='post.styles', name='styles', placeholder='Styles')



                                .col-md-8
                                         ckeditor([(ngModel)]='post.content', [config]="{uiColor: '#FFFFFF'}", (change)='onChange($event)', (ready)='onReady($event)', debounce='500')
                            .row

                                .col-md-4(*ngIf='uploader && uploader.getNotUploadedItems().length == 0')
                                    .fileUpload.btn.btn-primary
                                        span(*ngIf='!isEditing') Upload image

                                        span(*ngIf='isEditing') Change image

                                        input.upload(type='file', ng2FileSelect, [uploader]='uploader')

                                .col-md-4(*ngIf='uploader && uploader.getNotUploadedItems().length > 0')
                                    div(*ngFor='let item of uploader.queue')
                                         | {{item?.file?.name}} {{item?._file}}

                            .row
                                .col-md-4
                                    button.btn.btn-success(*ngIf='isEditing', (click)='updatePost()') Save article

                                    button.btn.btn-success(*ngIf='!isEditing', (click)='addPost()') Save article
